{
  "name": "boilerplate-node",
  "version": "1.0.0",
  "scripts": {
    "dev": "node --import tsx src/index.ts --watch",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts",
    "lint": "prettier --check src && eslint src --max-warnings=0",
    "lint:fix": "prettier --write src && eslint src --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch --passWithNoTests",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "test:ui": "vitest --ui --passWithNoTests",
    "postinstall": "husky"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.19.2",
    "validator": "^13.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.11.0"
  }
}
